    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug unit tests in library 'ffmpeg_bus'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--package=ffmpeg-bus",
                    "--lib",
                    "dynamic_mixer"
                ],
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/ffmpeg/lib:${workspaceFolder}/zlm/lib",
                    "RUST_BACKTRACE": "1",
                    "RUST_LOG": "debug"
                }
            }
        },
        {
            "name": "Debug executable 'lite-nvr'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--package=lite-nvr",
                    "--bin=lite-nvr"
                ],
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/ffmpeg/lib:${workspaceFolder}/zlm/lib",
                    "RUST_BACKTRACE": "1",
                    "RUST_LOG": "debug"
                }
            },
            "args": []
        },
        {
            "name": "Debug unit tests in executable 'lite-nvr'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--package=lite-nvr",
                    "--bin=lite-nvr"
                ],
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/ffmpeg/lib:${workspaceFolder}/zlm/lib",
                    "RUST_BACKTRACE": "1",
                    "RUST_LOG": "debug"
                }
            }
        }
    ]
}